<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KattaCalculater.Views.AboutPage"
             xmlns:vm="clr-namespace:KattaCalculater.ViewModels"
             Title="{Binding Title}"
             xmlns:dg="clr-namespace:Xamarin.Forms.DataGrid;assembly=Xamarin.Forms.DataGrid">
    <ContentView>
        <dg:DataGrid ItemsSource="{Binding Transactions}" SelectionEnabled="True"
               RowHeight="70" HeaderHeight="50" BorderColor="#CCCCCC" HeaderBackground="#E0E6F8">

            <!--<dg:DataGrid.HeaderFontSize>
                <OnIdiom  x:TypeArguments="x:Double">
                    <OnIdiom.Tablet>15</OnIdiom.Tablet>
                    <OnIdiom.Phone>13</OnIdiom.Phone>
                </OnIdiom>
            </dg:DataGrid.HeaderFontSize>-->

            <dg:DataGrid.Columns>


                <dg:DataGridColumn Title="DateIn" PropertyName="DateIn" Width="2*"/>
                <dg:DataGridColumn Title="DateOut" PropertyName="DateOut" Width="0.95*"/>
                <dg:DataGridColumn Title="KutteCount" PropertyName="KutteCount"  Width="1*"/>
                <dg:DataGridColumn Title="DesignId" PropertyName="DesignId"/>
                <dg:DataGridColumn Title="PartyId" PropertyName="PartyId"/>

            </dg:DataGrid.Columns>


        </dg:DataGrid>
    </ContentView>

</ContentPage>
